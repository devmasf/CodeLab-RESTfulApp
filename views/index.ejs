<%- include ("partials/header") %>

<div class="ui main text container">
  <div class="ui huge header">
    <h2>Popular posts</h2>
  </div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach((blog) => { %>
      <div class="item">
        <div class="image">
          <!-- This is for the size of the images, so we don't get gigantic images -->
          <img src="<%=blog.image%>" alt="" />
        </div>
        <div class="content">
          <a href="/blogs/<%= blog._id %>" class="header"><%=blog.title%></a>
          <div class="meta">
            <span><%= blog.created.toDateString() %></span>
          </div>
          <div class="description">
            <p><em>Submitted by <%= blog.author.username %></em></p>
          </div>
          <div class="description">
            <p><%- blog.body.substring(0, 100) %>...</p>
          </div>
          <div class="extra">
            <a
              href="/blogs/<%= blog._id %>"
              class="ui floated basic violet button"
              >Read More
              <i class="right chevron icon"></i>
            </a>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>

<!-- Doing %= blogs %>Like this we can just check if we are getting "blogs" -->

