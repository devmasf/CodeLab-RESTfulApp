<%- include ("partials/header") %>

<div class="ui main text container segment">
  <div class="ui huge header">Edit <%= blog.title %></div>
  <form
    class="ui form"
    action="/blogs/<%= blog._id %>?_method=PUT"
    method="POST"
  >
    <!-- Here, adding "/... blog._id %>", and changing the method to "PUT", it submits. BUT, it submits the form doing a GET request, so we get it as a "Query String" in the URL bar. This is why we change it to "POST" -->
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <div class="field">
      <label for="/">Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>" />
      <!-- Here, with the "value" attribute, we are specifying the "title" of the blog -->
    </div>
    <div class="field">
      <label for="/">Image</label>
      <input type="text" name="blog[image]" value="<%= blog.image %>" />
    </div>
    <div class="field">
      <label for="/">Blog Content</label>
      <textarea name="blog[body]" id="" cols="30" rows="10" required>
<%= blog.body %></textarea
      >
    </div>
    <input class="ui violet big basic button" type="submit" />
  </form>
</div>

<%- include ("partials/footer") %>
